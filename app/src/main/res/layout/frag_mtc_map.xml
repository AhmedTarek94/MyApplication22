<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ltc_pc.myapplication.frag_mtc_map">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find us on Google Maps"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_map"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="36dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or,Here is the place "
                android:textSize="20sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="92dp" />


            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/photo_map1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map1" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/photo_map2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map2" />

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
